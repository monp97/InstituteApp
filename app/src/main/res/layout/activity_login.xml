<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.monika.instituteapp.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/linearlayout"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/outline_lock_white_24dp"
                    android:padding="10dp"
                    android:background="@drawable/circle"
                    android:layout_height="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:rotation="45"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-15dp"
                android:id="@+id/imageview"
                android:src="@drawable/square"
                android:layout_below="@+id/linearlayout"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/imageview"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/outline_perm_identity_white_18dp"/>

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/loginback"
                        android:paddingLeft="10dp"
                        android:hint="Username"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/linearlayout2"
                    android:layout_below="@+id/linearlayout1"
                    android:layout_margin="20dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:padding="5dp"
                        android:src="@drawable/outline_vpn_key_white_18dp"/>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/loginback"
                        android:paddingLeft="10dp"
                        android:hint="Password"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout3"
                    android:layout_below="@+id/linearlayout2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Remember Me"
                        android:textColor="@color/remember_me"
                        />

                    <TextView
                        android:id="@+id/password_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        android:text="Forgot Password?"/>

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_below="@+id/linearlayout3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="SIGN IN"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_height="50dp" />





            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
